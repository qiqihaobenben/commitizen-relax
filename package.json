{
  "name": "cz-relax",
  "version": "0.1.1",
  "description": "A better commitizen practice",
  "keywords": [
    "commitizen",
    "cz-cli"
  ],
  "homepage": "https://github.com/qiqihaobenben/commitizen-relax#readme",
  "bugs": {
    "url": "https://github.com/qiqihaobenben/commitizen-relax/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiqihaobenben/commitizen-relax.git"
  },
  "license": "MIT",
  "author": "chenfangxu <chenfangxu_qixin@163.com>",
  "main": "lib/cli.js",
  "bin": "lib/cli.js",
  "types": "lib/cli.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc --watch",
    "lint": "eslint --ext .ts",
    "prepublishOnly": "npm run clean && npm run build",
    "clean": "rimraf ./lib",
    "preBuild": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "tsc",
    "test": "echo \"TODO LIST\""
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.26",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "cz-git": "^1.2.8",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.55.0",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.2.0",
    "commitizen": "^4.2.4",
    "fs-extra": "^10.1.0",
    "ora": "^5.4.1"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
